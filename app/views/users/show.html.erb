<h1>Profile</h1>
<div>
  <%= @user.following.count %> <%= link_to "following", following_user_path(@user) %> | 
  <%= @user.followers.count %> <%= link_to "followers", followers_user_path(@user) %>
</div>
<br />

<div>
  <%= @user.name %>, <%= @user.email %>
</div>

<div>
  <% u = User.find(1) %>
  <% if u.following? @user %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
</div>
